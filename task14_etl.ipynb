import pandas as pd
import sqlite3
import os
os.makedirs("raw", exist_ok=True)
os.makedirs("processed", exist_ok=True)
os.makedirs("output", exist_ok=True)

print("Folders created successfully.")
df = pd.read_csv("raw/retail_sales.csv")  # place dataset in raw folder
print("Original Dataset Shape:", df.shape)
df.head()
# Standardize column names
df.columns = df.columns.str.lower().str.replace(" ", "_")

# Remove duplicate records
df = df.drop_duplicates()

# Handle missing values
df = df.fillna(0)

# Convert date column
df['order_date'] = pd.to_datetime(df['order_date'])

print("After Cleaning Shape:", df.shape)
# Create margin column
df['margin'] = df['sales'] - df['cost']

# Customer segmentation flag
df['high_value_customer'] = df['sales'].apply(lambda x: 1 if x > 500 else 0)

df.head()
customers = df[['customer_id', 'customer_name', 'segment']].drop_duplicates()
orders = df[['order_id', 'order_date', 'customer_id', 'sales', 'margin']]
products = df[['product_id', 'product_name', 'category', 'cost']].drop_duplicates()

print("Customers Table:", customers.shape)
print("Orders Table:", orders.shape)
print("Products Table:", products.shape)
customers.to_csv("processed/customers.csv", index=False)
orders.to_csv("processed/orders.csv", index=False)
products.to_csv("processed/products.csv", index=False)

print("Processed CSV files saved.")
conn = sqlite3.connect("output/database.sqlite")

customers.to_sql("customers", conn, if_exists="replace", index=False)
orders.to_sql("orders", conn, if_exists="replace", index=False)
products.to_sql("products", conn, if_exists="replace", index=False)

conn.close()

print("Data loaded into SQLite database successfully.")
print("Final Validation")

print("Customers Rows:", customers.shape[0])
print("Orders Rows:", orders.shape[0])
print("Products Rows:", products.shape[0])
print("ETL Pipeline Completed Successfully âœ…")
